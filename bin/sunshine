#!/usr/bin/env node

// allows us to use ES modules (import)
require = require('esm')(module);

const {argv} = require('yargs')
	.option('verbose', {
    alias: 'v',
    type: 'boolean',
    description: 'Run with verbose logging'
	})


// bring in "src/cli.js"
require('../src/cli') 
	// call our "cli" exported function
	.cli(argv);